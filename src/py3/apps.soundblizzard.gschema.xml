<?xml version="1.0" encoding="UTF-8"?>
<!-- sb-config-gsettings schema, should exist in /usr/share/glib-2.0/schemas/apps.sb-config.gschema.xml -->
<!-- run glib-compile-schemas /usr/share/glib-2.0/schemas/ once file present -->
<!-- thanks to http://www.micahcarrick.com/gsettings-python-gnome-3.html -->
<!-- #TODO - make file locations LSB compliant -->
<schemalist>
  <schema id="apps.soundblizzard" path="/apps/soundblizzard/">
    <key type="b" name="test-setting">
      <default>false</default>
      <summary>Test setting</summary>
      <description>Boolean test setting used for unit-test</description>
    </key>
    <key type="s" name="dbfile">
      <default>"~/.spambox/spambox.sqlite"</default>
      <summary>Database file</summary>
      <description>Location of SoundBlizzard sqlite database file</description>
    </key>
    <key type="s" name="playlistsfolder">
      <default>"~/.spambox/playlists"</default>
      <summary>Playslists folder</summary>
      <description>Location of Playlists folder for SoundBlizzard</description>
    </key>
  </schema>
</schemalist>